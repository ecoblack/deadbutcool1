

<div class="grid">
  <% @projects.each do |project| %>

    <div class="img-item" style="position: relative;">

      <%= link_to (image_tag(project.image, class: 'img-responsive', style: "height:100%;", remote: true )), project, remote: true,  class: 'gallery' %> 

     <%= link_to(project, class: 'project-link', :remote => true) do %> 
        <div class="onhover">
            
             <p class="brand"><%= project.brand.upcase %></p>

        </div>

    <% end %> 
</div>
   
 
  <% end %> 

</div>
