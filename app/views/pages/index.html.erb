  $(document).ready(function(){
        /* Vimeo Player */
        var togSrc = [ "/assets/icon-pause-desktop@3x.png", "/assets/icon-play-desktop@3x.png" ];
        var vid = $('#video'), 
            video_length = 0, 
            video_state = 'paused',
            $pauseplay = $("#playpause");
            
        if(vid.length) {
            video_state = 'playing';

            $('.video-wrapper').append($pauseplay);
        
            vid.vimeo("play")
                .vimeo("setVolume", 0)
                .vimeo("getDuration", function(data){
                    video_length = data;
                    console.log("Length "+ video_length);
                })

                

                .on("finish", function(){
                    vid.vimeo("unload");
                    video_state = 'paused';

                    console.log("Finished "+video_state);

                });

                // Play / Pause toggle
                $pauseplay.on('click', function(){
                    console.log(video_state);
                    
                    if(video_state == 'paused') {
 
                        this.src =  togSrc.reverse()[0];
                        vid.vimeo("play");
                        video_state = 'playing';

                    } else {
                      this.src =  togSrc.reverse()[0];
                        vid.vimeo("pause");
                        video_state = 'paused';

                    }
                });
            }

       });
        </script>

